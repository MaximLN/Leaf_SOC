<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:windowBackground="@android:color/transparent"
                android:padding="@dimen/widget_margin">

    <TextView
            android:id="@+id/appwidgetSocText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOC Err"
            android:textSize="50sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:textAlignment="center"/>
    <TextView
            android:id="@+id/appwidgetTempText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp Err"
            android:textSize="50sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:fontFamily="sans-serif"/>

</RelativeLayout>